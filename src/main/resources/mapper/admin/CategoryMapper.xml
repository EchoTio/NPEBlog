<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smallclover.nullpointerexception.mapper.CategoryMapper">

    <resultMap id="articleTagCategory" type="com.smallclover.nullpointerexception.model.ArticleTagCategory">
        <result property="articleId" column="article_id" />
        <result property="tagId" column="tag_id" />
        <result property="tagName" column="tag_name" />
        <result property="categoryId" column="category_id" />
        <result property="categoryName" column="category_name" />
    </resultMap>


    <select id="getCategoryByArticleIds" resultMap="articleTagCategory">
        SELECT * FROM category_article ca INNER  JOIN  article a ON ca.article_id = a.id
        WHERE ca.delete_flag = false AND a.delete_flag = false
        AND ca.article_id IN
        <foreach collection="list" item="articleId" index="index"
                 open="(" separator="," close=")">
            #{articleId}
        </foreach>
    </select>

</mapper>